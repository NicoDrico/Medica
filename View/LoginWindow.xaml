<Window x:Class="Medica.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medica.View"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="432" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,400,-6">
        <StackPanel Margin="20,20,-373,20">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,30"/>
            <Button Content="Применить" Click="OnLoginButtonClick" Width="348"/>
        </StackPanel>
        
    </Grid>
</Window>
