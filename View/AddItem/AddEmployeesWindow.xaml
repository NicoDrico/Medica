<Window x:Class="Medica.ViewModels.AddViewModel.AddEmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medica.ViewModels.AddViewModel"
        mc:Ignorable="d"
        Title="AddEmployeesWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="First Name:"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Middle Name:"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Last Name:"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5,0,10"/>

            <Button Content="Add" Click="OnAddButtonClick"/>
        </StackPanel>
        
    </Grid>
</Window>
