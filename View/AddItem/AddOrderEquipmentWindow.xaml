<Window x:Class="Medica.View.AddItem.AddOrderEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medica.View.AddItem"
        mc:Ignorable="d"
        Title="AddOrderEquipmentWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Order Date:"/>
            <DatePicker x:Name="OrderDatePicker" Margin="0,5,0,10"/>

            <TextBlock Text="Equpment ID:"/>
            <TextBox x:Name="EqupmentIdTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Provider ID:"/>
            <TextBox x:Name="ProviderIdTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Status:"/>
            <TextBox x:Name="StatusTextBox" Margin="0,5,0,10"/>

            <Button Content="Add" Click="OnAddButtonClick"/>
        </StackPanel>

    </Grid>
</Window>
