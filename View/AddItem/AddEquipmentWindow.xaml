<Window x:Class="Medica.ViewModels.AddViewModel.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medica.ViewModels.AddViewModel"
        mc:Ignorable="d"
        Title="AddEquipmentWindow" Height="450" Width="800">
    <Grid>
       
            <StackPanel Margin="20">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Purchase Date:"/>
            <TextBox x:Name="dBox">

            </TextBox>

            <Button Content="Add" Click="OnAddButtonClick"/>
        </StackPanel>
        
    </Grid>
</Window>
