<Window x:Class="Medica.ViewModels.EditViewModel.EditProviderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medica.ViewModels.EditViewModel"
        mc:Ignorable="d"
        Title="EditProviderWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Provider Name:"/>
            <TextBox x:Name="ProviderNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Address:"/>
            <TextBox x:Name="AddressTextBox" Margin="0,5,0,10"/>

            <Button Content="Save" Click="OnSaveButtonClick"/>
        </StackPanel>
        
    </Grid>
</Window>
